<h2>注文情報入力</h2>
<%= form_with model: @order,local:true do |f| %>
<div>
  <p>支払い方法</p>
    <!--クレジットカードのラジオボタン-->
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
　　<!--銀行振込のラジオボタン-->
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
</div>
<div>
  <p>お届け先</p>
    <!--ご自身の住所のラジオボタン-->
    <!--< f.radio_button :address, ？？？ %> 書き方不明-->
    <%= f.label :address, "ご自身の住所" %>
    <!--< order.address.address_display %>ここエラー出てます--></br>

    <!--登録済み住所のラジオボタン-->
    <!--< f.radio_button :address, ？？？ %> 書き方不明-->
    <%= f.label :address, "登録済み住所" %></br>
    <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %></br>

    <!--新しいお届け先のラジオボタン-->
    <!--< f.radio_button :address, ？？？ %> 書き方不明-->
    <%= f.label :address, "新しいお届け先" %></br>
    <%= f.label "郵便番号（ハイフンなし）" %>
    <%= f.text_field :post_code %>
    <%= f.label "住所" %>
    <%= f.text_field :address %>
    <%= f.label "宛名" %>
    <%= f.text_field :name %>
</div>
<% end %>

