<h1>注文履歴詳細</h1>
<h4>注文情報</h4>
<table border="1" style="border-collapse: collapse">
  <tr><th>注文日</th><td><%= @order.created_at.strftime("%Y/%m/%d") %></td></tr>
  <tr><th>配送先</th></th><td><%= @order.post_code %><%= @order.address %><%= @order.name %></td></tr>
  <tr><th>支払方法</th><td><%= @order.payment_method_i18n %></td></tr>
  <tr><th>ステータス</th><td><%= @order.status_i18n %></td></tr>
</table>
<h4>注文内容</h4>
<table border="1" style="border-collapse: collapse">
  <td>商品</td>
  <td>単価（税込）</td>
  <td>個数</td>
  <td>小計</td>
  <tr>
    <% @order.order_details.each do |order_details| %>
    <td><%= order_details.item.name %></td>
    <td><%= order_details.item.add_tax_price.to_s(:delimited) %></td>
    <td><%= order_details.quantity %></td>
    <td><%= order_details.price.to_s(:delimited) %></td>
    <% end %>
  </tr>
</table>
<h4>請求情報</h4>
<table>
  <tr><th>商品合計</th><td><%= @total_price.to_s(:delimited) %></td></tr>
  <tr><th>配送料</th></th><td>800</td></tr>
  <tr><th>ご請求額</th><td><%= (@total_price +800).to_s(:delimited) %></td></tr>
</table>
