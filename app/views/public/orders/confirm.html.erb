<h2>注文情報確認</h2>

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価税込</th>
        <th>数量</th>
        <th>小計</th>
        <th colspan="5"></th>
      </tr>
    </thead>
    <tbody>
      <%= @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.get_image, size:'100x100' %>
          <%= cart_item.item.name %>
        </td>
        <td><%= cart_item.item.add_tax_price.to_s(:dalimited) %></td>
        <td><%= cart_item.quantity %></td>
        <td><%= (cart_item.item.add_tax_price.to_s(:dalimited) * (cart_item.quantity)) %></td>
      </tr>
    </tbody>
  </table>

  <table>
    <tr><th>送料</th><td>800</td></tr>
    <tr><th>商品合計</th><td></td></tr>
    <tr><th>請求金額</th><td></td></tr>
  </table>