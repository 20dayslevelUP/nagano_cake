 <div>
      <h2>ショッピングカート</h2>
      <div>
        <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete %>
      </div>

      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <%= @cart_items.each do |cart_item| %>
              <tr>
                <td>
                  <!--ここに商品の画像入れる-->
                  <!--< image_tag book.user.get_profile_image, size:'50x50' %>-->
                  <!--商品名-->
                  <%= cart_item.item.name %>
                </td>
                <td><%= cart_item.item.add_tax_price %></td>
                <td>
                  <%= form_with model: cart_item, url: cart_items_path, method: :post, local: true do |f| %>
                    <%= f.select :quantity, *[1..20], include_blank: "個数選択"  %>
                  <% end %>
                </td>
                <td><%= cart_item.subtotal %></td>
                <td>
                  <!--link_toについて、destroyのプレフィックスがないため、URL貼り付け-->
                  <%= link_to '削除する', '/cart_items/:id', method: :delete %>
                </td>
                <%= @total_price +=  cart_item.subtotal %>
              </tr>
            <% end %>
        </tbody>
      </table>

      <div>
        <%= link_to '買い物を続ける', root_path %>
      </div>
      <div>
        <%= link_to '情報入力に進む', new_order_path %>
      </div>
    </div>