<%= image_tag @item.image, size:'100x100' %>

<%= @item.name %>
<%= @item.introduction %>
<%= @item.add_tax_sales_price.to_s(:dalimited) %>

<%= form_with model: @item_quanity, local: true |f| %>
  <%= f.select :quanity, *[1..20]  %>
  <%= f.hidden_field :quanity, value: @item %>
  <%= f.submit 'カートに入れる' %>
<% end %>