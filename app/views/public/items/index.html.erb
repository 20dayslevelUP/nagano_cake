<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%= render 'search', genres: @genres %>
    </div>

    <div class="col-md-9 offset-1">
      <h2>商品一覧</h2>
      <h4>全<%= @items.count %>件</h4>

      <% @items.each do |item| %>
        <%= link_to item_path(item) do %>
          <%= image_tag item.get_image, size:'100x100' %><br>
        <%= item.name %>
        <% end %>
        <p>¥ <%= item.price %></p>
      <% end %>
      <%= paginate @items %>
    </div>
    </div>
  </div>
</div>
