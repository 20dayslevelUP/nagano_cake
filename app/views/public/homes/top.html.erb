<div class="container text-center">
	<div class="row">
		<div class="col">
			<h2 class="text">新着商品</h2>
		</div>
	</div>

	<div class="row">
	<% @items.each do |item| %>
		<div class="col-md-3">
			<div class="card text-center shadow-lg" style="width: 13rem;">
				<%= link_to item_path(item) do %>
					<%= image_tag item.get_image, size:'70x200', class:"card-img-top" %></br>
					<h6 class="card-text"><%= item.name %></h6>
				<% end %>
				<p>¥<%= item.price %></p>
			</div>
		</div>
			<% end %>
	</div>
	<div class="row">
		<div class="col-4">
			<%= link_to "全ての商品を見る", items_path %>
		</div>
	</div>
</div>





