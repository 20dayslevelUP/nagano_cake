<h1>配送先登録/一覧</h1>

　<%= form_with model: @address do |f| %>
　<div>
　  <div>
　    <%= f.label :郵便番号 %>
      <%= f.text_field :post_code, placeholder: '00000000' %>
    </div>
    <div>
      <%= f.label :住所 %>
      <%= f.text_field :address, placeholder: '東京都渋谷区代々木神園町0-0' %>
    </div>
    <div>
      <%= f.label :宛名 %>
      <%= f.text_field :name, placeholder: '令和道子' %>
    </div>
    <%= f.submit "新規登録" %>
        </div>
  <% end %>

 <% @addresses.each do |address| %>
    <div>
     <div>郵便番号<%= address.post_code %></div>
     <div>住所<%= address.address %></div>
     <div>宛名<%= address.name %></div>
    　<div>
      　<%#= link_to "編集する", edit_address_path(address) %>
      　<%#= link_to "削除する", address_path(address) %>
    　</div>
    </div>
 <% end %>