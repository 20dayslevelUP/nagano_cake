<h2>商品新規登録</h2>

<%= form_with model: @item, local: true do |f| %>
  <div class="form-group">
  <%= f.label :image, "商品画像" %>
  <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group">
  <%= f.label :name, "商品名" %>
  <%= f.text_field :name %>
  </div>

  <div class="form-group">
  <%= f.label :introduction, "商品説明" %>
  <%= f.text_area :introduction %>
  </div>

  <div class="form-group">
  <%= f.label :genre, "ジャンル" %>
  <%= f.collection_select :genre_id, @genre, include_blank: "--選択して下さい--" %>
  </div>

  <div class="form-group">
  <%= f.label :price, "税抜価格" %>
  <%= f.number_field :price %>円
  </div>

  <div class="form-group">
  <%= f.label :is_active, "販売ステータス" %>
  <%= f.radio_button :is_active, :販売中, checked: "checked" %>
  <%= f.radio_button :is_active, :販売停止中　%>
  </div>

  <div class="form-group">
  <%= f.submit "新規登録" %>
  </div>

<% end %>