<h1>管理者側トップ(注文履歴一覧)</h1>
<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= link_to admin_order_path(order) do %>
        "購入日時が入る"<%#= 日付 %>
        <% end %>
      </td>
      <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
      <td><%= order.order_details.sum(:quantity) %></td>
      <td><%= order.order_status %></td>
     </tr>
    <% end %>
  </tbody>
</table>